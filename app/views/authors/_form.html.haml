= form_with model: @author, local: true do |f|
  - if @author.errors.any?
    #error_explanation
      %h2= "#{pluralize(@author.errors.count, "error")} prohibited this author from being saved:"
      %ul
        - @author.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :pen_name
    = f.text_field :pen_name
  .actions
    = f.submit 'Save'
